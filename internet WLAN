import network
import time

wlan = network.WLAN(network.STA_IF)
wlan.active(True)

wlan.connect('nombre de red', 'contrase침a')

max_wait = 10

while max_wait > 0:
    if wlan.status() < 0 or wlan.status() >= 3:
        max_wait -= 1
        print('Esperando conexi칩n...')
        time.sleep(1)
    else:
        status = wlan.ifconfig()
        print('Direcci칩n IP:', status[0])
        print('Conexi칩n exitosa a la red Wi-Fi.')
        break
